        <!-- NAVIGATION BAR START -->
		<%- include("nav", {active: "Home"}) %>
	<!-- NAVIGATION BAR END-->

        <!-- IMAGE CAROUSEL START-->
        <main role="main" id="maincontent">
            <div class="d-flex flex-fill justify-content-lg-center">
